{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },

  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier", "plugin:prettier/recommended"],
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "new-cap": 0
  }
}
