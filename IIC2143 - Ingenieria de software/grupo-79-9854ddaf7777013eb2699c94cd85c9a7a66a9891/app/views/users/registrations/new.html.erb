<h2 class="title is-3">Registrarme</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nombre_de_usuario %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Confirmación_de_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Teléfono %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone"%>
  </div>

  <div class="field">
    <%= f.label :Dirección %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    Foto de perfil <i>(No subas nada si no quieres foto)</i><br />
    <div>
    <% if @user.profile_pic.attached?%>
        <%= image_tag(@user.profile_pic, size: "100")%>
    <%else%>
        <%= image_tag('default_profile.png', size: "100")%>
    <%end%>
    </div>
    <%= f.file_field :profile_pic, autocomplete: "profile_pic" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarme" ,:class =>"button is-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
<div>
<%= link_to 'Volver atrás', controllers_index_path %>
</div>
