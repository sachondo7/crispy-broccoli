<h2 class="title is-2">Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    Nombre de usuario <br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    Dirección <br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    Teléfono <br />
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    Nueva contraseña <i>(Dejar en blanco si no desea cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    Confirmar nueva contraseña <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    Foto de perfil <i>(No subas nada si no la quieres cambiar)</i><br />
    <div>
    <% if @user.profile_pic.attached?%>
        <%= image_tag(@user.profile_pic, size: "100")%>
    <%else%>
        <%= image_tag('default_profile.png', size: "100")%>
    <%end%>
    </div>
    <%= f.file_field :profile_pic, autocomplete: "profile_pic" %>
  </div>

  <div class="field">
    Contraseña actual <i>(Necesitamos tu contraseña actual para confirmar cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar cambios" %>
  </div>
<% end %>
<br>
<h3 class="title is-4">Borrar mi cuenta</h3>
<p>¿Deseas eliminar tu cuenta de forma permanente?<%= button_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Volver atrás", :back %>
